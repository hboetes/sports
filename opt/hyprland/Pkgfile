# Description: fancy wayland compositor
# URL:         https://github.com/hyprwm/Hyprland.git

name=hyprland
version=git
release=1
branch=master
source=(
    https://github.com/hyprwm/Hyprland.git
)

build()
{
    cd $name
    meson --prefix=/usr/local build
    ninja -C build
    DESTDIR=$PKG ninja -C build install
}
