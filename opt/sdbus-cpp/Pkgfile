# Description: sdbus-cpp
# Dependencies: cmake
# https://github.com/Kistler-Group/sdbus-cpp.git

name=sdbus-cpp
version=git
release=1
source=(https://github.com/Kistler-Group/sdbus-cpp.git)

build()
{
    cd $name
    git checkout v2.1.0
    mkdir build
    cd build
    cmake .. -DCMAKE_INSTALL_PREFIX=/usr/local -DBUILD_EXAMPLES=OFF -DBUILD_TESTS=OFF
    make -j$(nproc)
    make install DESTDIR=$PKG
}
