# Description: Volume control for pipewire

name=pwvucontrol
version=git
release=1
source=(
    https://github.com/saivert/pwvucontrol.git
    0.5.diff
)

build()
{
    cd $name
    patch -i $SRC/0.5.diff -p1
    meson build . --prefix=/usr
    ninja -C build
    DESTDIR=$PKG ninja -C build install
}
