# Description: i3bar for wayland
# URL:         https://github.com/swaywm/sway.git

name=waybar
version=git
release=1
branch=master
source=(https://github.com/Alexays/Waybar.git)

build()
{
    cd $name
    meson build -Dsndio=disabled -Drfkill=enabled
    ninja -C build
    DESTDIR=$PKG ninja -C build install
}
