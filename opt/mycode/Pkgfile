# Depends on:

name=mycode
version=1.1
release=1
source=(
    afe.sh
    count_to_three.c
    dropscript.sh
    empty_message.c
    slowcat.c
    munlink.c
    find_unlinked.sh
    makeindexhtml.sh
    releaseupgrade.sh
    remind.sh
    statusbar_right.c
    whitelist-generator.sh
    wallpaper.sh
)

build()
{
    install -d $PKG/usr/local/{,s}bin
    for i in *.c; do
        make ${i%.c}
        install ${i%.c} $PKG/usr/local/bin
    done
    for i in *.sh; do
        install $i $PKG/usr/local/bin/${i%.sh}
    done
    for i in *.py; do
        install $i $PKG/usr/local/bin/${i%.py}
    done
}
