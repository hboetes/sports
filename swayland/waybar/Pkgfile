# Description: nice bar for wayland
# URL:         https://github.com/Alexays/Waybar.git
# Dependencies:libinotify

name=waybar
version=git
release=1
branch=master
source=(https://github.com/Alexays/Waybar.git)

build()
{
    cd waybar
    # meson setup build
    meson setup build -Dwrap_mode=nodownload -Dtests=disabled
    ninja -C build
    DESTDIR=$PKG ninja -C build install
}
