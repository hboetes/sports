# Description: beautiful shell based on quick-shell
# URL:         https://github.com/noctalia-dev/noctalia-shell.git

name=noctalia-shell
version=git
release=3.8.0
branch=main
source=(
    https://github.com/noctalia-dev/noctalia-shell.git
)

build()
{
    install_path=usr/local/share/quickshell
    cd $name
    git checkout $branch # v$release
    cd ..

    mkdir -p $PKG/$install_path
    cp -r noctalia-shell $PKG/$install_path
    rm -rf $PKG/$install_path/$name/{.git*,flake.*,*nix*,*lefthook.yml}
}
