# Description: awesome / dwm like workspaces for hyprland
# URL:         https://github.com/shezdy/hyprsplit.git

name=hyprsplit
version=git
release=1
branch=master
source=(
    https://github.com/shezdy/hyprsplit.git
)

build()
{
    cd $name
    meson setup build
    ninja -C build
    DESTDIR=$PKG ninja -C build install
}
